<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.something.android.stories3.StoriesActivity">

    <ImageView
        android:id="@+id/Image_View_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_1"/>

    <TextView
        android:id="@+id/Title_View_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Image_View_Id"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:padding="16dp"
        android:text="Title"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Title_View_Id"
        android:textStyle="bold"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/Description_View_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="22dp"
            android:text="Description"
            android:textSize="19sp" />

    </ScrollView>


